@if (Model.Count() == 0)
{
    <h2>Hiç geçmiş rezervasyonunuz bulunmamaktadır.</h2>
}
else
{
    <h1>Geçmiş Rezervasyonlarım</h1>

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Lokasyon</th>
            <th>Kişi Sayısı</th>
            <th>Reszervasyon Tarihi</th>
            <th>Durum</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>ReservationID</td>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                <td>@item.Status</td>
            </tr>
        }
    </table>

}